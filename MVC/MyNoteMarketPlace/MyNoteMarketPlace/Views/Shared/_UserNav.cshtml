<body data-spy="scroll" data-target=".navbar" data-offset="65">
    <!-- Header -->
    <header>
        @{
            var context = new Datebase1Entities();
        }
        <nav class="navbar navbar-fixed-top">
            <div class="container-fluid">
                <div class="site-nav-wrapper">
                    <!--For LOGO -->
                    <div class="navbar-header">
                        <!--Mobile Menu Open Button -->
                        <span id="mobile-nav-open-btn">&#9776;</span>
                        <a href="#home" class="navbar-brand smooth-scroll"><img src="~/Img/Front/pre-login/logo.png" alt="logo" onclick="location.href='@Url.Action("Index", "Home")'"></a>
                    </div>
                    <!--Main Menu -->
                    <div class="cointer">
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav  pull-right">

                                <li><a class="smooth-scroll brdr" onclick="location.href='@Url.Action("Search","SearchNotes")'">Search Notes</a></li>
                                <li><a class="smooth-scroll brdr" onclick="location.href='@Url.Action("Dashboard","SellYourNotes")'">Sell Your Notes</a></li>
                                @if (User.Identity.IsAuthenticated)
                                {

                                    <li><a class="smooth-scroll brdr" onclick="location.href='@Url.Action("BuyerRequest","BuyerRequest")'">Buyer Requests</a></li>
                                }
                                <li><a class="smooth-scroll brdr" onclick="location.href='@Url.Action("FAQ","FAQ")'">FAQ</a></li>
                                <li><a class="smooth-scroll brdr" onclick="location.href='@Url.Action("ContactUs","ContactUs")'">Contact Us</a></li>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li>

                                        <!-- a tag is removed -->

                                        <div class="userprofile-user-icon dropdown dashboard-user">
                                            <!--  <a role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"> <img src="~/Img/Front/User-Profile/user.jpg" class="img-fluid img-circle" alt="User"></a>  -->
                                            <a role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"> <img src="@Url.Action("GetPhoto", "UserProfile")" class="img-fluid img-circle" alt="User"></a>
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                                <a class="dropdown-item" href="@Url.Action("UserProfile","UserProfile")">My Profile</a>
                                                <a class="dropdown-item" href="@Url.Action("MyDownload","MyDownload")">My Downloads</a>
                                                <a class="dropdown-item" href="@Url.Action("MySoldNotes","MySoldNotes")">My Sold Notes</a>
                                                <a class="dropdown-item" href="@Url.Action("MyRejectedNotes","MyRejectedNotes")">My Rejected Notes</a>
                                                <a class="dropdown-item" href='@Url.Action("ChangePassword","SignUp")'>Change Password</a>
                                                <a class="dropdown-item givecolor" role="button" onclick="location.href='@Url.Action("Logout", "SignUp")'">LOGOUT</a>

                                            </div>
                                        </div>
                                    </li>
                                }
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li>
                                        <a class="smooth-scroll" href="#">
                                            <!--    <button type="submit" class="btn text-center" id="mynavbtn" onclick="location.href='@Url.Action("Logout", "SignUp")'">Logout</button> -->
                                            <button type="submit" class="btn text-center" id="mynavbtn" onclick="location.href='@Url.Action("Logout", "SignUp")'">Logout</button>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a class="smooth-scroll" href="#">
                                            <button type="submit" class="btn text-center" id="mynavbtn" onclick="location.href='@Url.Action("Login", "SignUp")'">Login</button>
                                        </a>
                                    </li>

                                }
                            </ul>
                        </div>
                    </div>
                    <!--Mobile Menu -->
                    <div id="mobile-nav">
                        <!--Mobile Menu Close Button -->
                        <span id="mobile-nav-close-btn">&times;</span>
                        <div id="mobile-nav-content">
                            <ul class="nav">

                                <li><a class="smooth-scroll brdr" onclick="location.href='@Url.Action("Search","SearchNotes")'">Search Notes</a></li>
                                <li><a class="smooth-scroll brdr" onclick="location.href='@Url.Action("Dashboard","SellYourNotes")'">Sell Your Notes</a></li>
                                @if (User.Identity.IsAuthenticated)
                                {

                                    <li><a class="smooth-scroll brdr" onclick="location.href='@Url.Action("BuyerRequest","BuyerRequest")'">Buyer Requests</a></li>
                                }
                                <li><a class="smooth-scroll brdr" onclick="location.href='@Url.Action("FAQ","FAQ")'">FAQ</a></li>
                                <li><a class="smooth-scroll brdr" onclick="location.href='@Url.Action("ContactUs","ContactUs")'">Contact Us</a></li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li>

                                        <!-- a tag is removed -->
                                        <div class="userprofile-user-icon dropdown dashboard-user">
                                            <!--  <a role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"> <img src="~/Img/Front/User-Profile/user.jpg" class="img-fluid img-circle" alt="User"></a> -->
                                            <a role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"> <img src="@Url.Action("GetPhoto", "UserProfile")" class="img-fluid img-circle" alt="User"></a>
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                                <a class="dropdown-item" href="@Url.Action("UserProfile","UserProfile")">My Profile</a>
                                                <a class="dropdown-item" href="@Url.Action("MyDownload","MyDownload")">My Downloads</a>
                                                <a class="dropdown-item" href="@Url.Action("MySoldNotes","MySoldNotes")">My Sold Notes</a>
                                                <a class="dropdown-item" href="@Url.Action("MyRejectedNotes","MyRejectedNotes")">My Rejected Notes</a>
                                                <a class="dropdown-item" href='@Url.Action("ChangePassword","SignUp")'>Change Password</a>
                                                <a class="dropdown-item givecolor" role="button" onclick="location.href='@Url.Action("Logout", "SignUp")'">LOGOUT</a>
                                            </div>
                                        </div>

                                    </li>
                                }
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li>
                                        <a class="smooth-scroll" href="#">
                                            <button type="submit" class="btn text-center" id="mynavbtn" onclick="location.href='@Url.Action("Logout", "SignUp")'">Logout</button>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a class="smooth-scroll" href="#">
                                            <button type="submit" class="btn text-center" id="mynavbtn" onclick="location.href='@Url.Action("Login", "SignUp")'">Login</button>
                                        </a>
                                    </li>

                                }
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </nav>


    </header>
    <!-- Header Ends -->

    @RenderBody()
    <!-- footer -->
  
    <footer>
        <div class="end">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-12 col-sm-6 col-xs-8">
                        <p>
                            Copyright &copy;Tatvasoft All Rights Reserved.
                        </p>
                    </div>
                    @{
                        var facebook = context.SystemConfigurations.Where(x => x.Key.ToLower() == "facebookurl").Select(x => x.Value).FirstOrDefault();
                        var twitter = context.SystemConfigurations.Where(x => x.Key.ToLower() == "twitterurl").Select(x => x.Value).FirstOrDefault();
                        var linkedin = context.SystemConfigurations.Where(x => x.Key.ToLower() == "linkedinurl").Select(x => x.Value).FirstOrDefault();
                    }

                    <div class="col-md-6 col-12 col-sm-6 col-xs-4 text-right">
                        <ul class="social-list notes-footer">
                            <li><a href="@facebook" target="_blank"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="@twitter" target="_blank"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="@linkedin" target="_blank"><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- footer ends -->
    <!--jquery-->
    <script src="~/Script/Front/js/jquery.min.js"></script>
    <!-- Proper JS -->
    <script src="~/Script/Front/js/popper.min.js"></script>
    <!--bootstrap.js file-->
    <script src="~/Script/Front/js/bootstrap/bootstrap.min.js"></script>
    <!-- custom js file-->

    <script src='~/Script/Front/js/script.js'></script>
    <script src="~/Script/jquery.validate.min.js"></script>
    <script src="~/Script/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("CustomScript",required: false)
</body>

</html>