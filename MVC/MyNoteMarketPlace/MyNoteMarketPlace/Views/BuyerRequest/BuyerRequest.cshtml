@model  IEnumerable<MyNoteMarketPlace.Models.BuyerRequestViewModel>

@{
    ViewBag.Title = "BuyerRequest";
    Layout = "~/Views/Shared/_UserNav.cshtml";
}

<!-- Buyer Requests Teble -->
<!-- Buyer Requests Teble -->
    <div class="outerbox">
        <section id="dashboard-progress" class="mydownload-margin">
            <div class="container">
                @using (Html.BeginForm("BuyerRequest", "BuyerRequest", FormMethod.Get))
                {
                    <div class="row top-table">
                        <div class=" col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <h3>Buyer Requests</h3>
                        </div>
                        <div class=" col-lg-6 col-md-6 col-sm-6 col-xs-12 dashboard-pa ">
                            <div class="row justify-content-end left-end">
                                <div class="wrapper">
                                    <img src="~/Img/Front/Dashboard/search.jpg" class="searchimage doup">
                                    <input type="text" class="form-control search-bar InputEmail1" placeholder="Search" value="@ViewBag.Search">
                                </div>
                                <div class="btn-merge">
                                    <button type="submit" class="btn text-uppercase text-center" id="mybt"><b>Search</b></button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <!-- Table -->
                <div class="row buyer-request">
                    <div class="col-md-12">
                        <div class="grid-table table-responsive-xl">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col" class="align-middle text-center">SR NO.</th>

                                        <th scope="col" class="align-middle">@Html.ActionLink("Notes Title", "BuyerRequest", new { sort = ViewBag.Sort == null ? "Title_Desc" : (ViewBag.Sort == "Title_Asc" ? "Title_Desc" : "Title_Asc"), search = @ViewBag.Search, page = @ViewBag.PageNumber })</th>
                                        <th scope="col" class="align-middle">@Html.ActionLink("Category", "BuyerRequest", new { sort = ViewBag.Sort == null ? "Category_Desc" : (ViewBag.Sort == "Category_Asc" ? "Category_Desc" : "Category_Asc"), search = @ViewBag.Search, page = @ViewBag.PageNumber })</th>
                                        <th scope="col" class="align-middle">@Html.ActionLink("Buyer", "BuyerRequest", new { sort = ViewBag.Sort == null ? "Buyer_Desc" : (ViewBag.Sort == "Buyer_Asc" ? "Buyer_Desc" : "Buyer_Asc"), search = @ViewBag.Search, page = @ViewBag.PageNumber })</th>
                                        <th scope="col" class="align-middle">@Html.ActionLink("Phone no.", "BuyerRequest", new { sort = ViewBag.Sort == null ? "Phone_Desc" : (ViewBag.Sort == "Phone_Asc" ? "Phone_Desc" : "Phone_Asc"), search = @ViewBag.Search, page = @ViewBag.PageNumber })</th>
                                        <th scope="col" class="align-middle">@Html.ActionLink("Sell Type", "BuyerRequest", new { sort = ViewBag.Sort == null ? "Type_Desc" : (ViewBag.Sort == "Type_Asc" ? "Type_Desc" : "Type_Asc"), search = @ViewBag.Search, page = @ViewBag.PageNumber })</th>
                                        <th scope="col" class="align-middle">@Html.ActionLink("Price", "BuyerRequest", new { sort = ViewBag.Sort == null ? "Price_Desc" : (ViewBag.Sort == "Price_Asc" ? "Price_Desc" : "Price_Asc"), search = @ViewBag.Search, page = @ViewBag.PageNumber })</th>
                                        <th scope="col" class="align-middle">@Html.ActionLink("Downloaded Date/Time", "BuyerRequest", new { sort = ViewBag.Sort == null ? "DownloadedDate_Asc" : (ViewBag.Sort == "DownloadedDate_Desc" ? "DownloadedDate_Asc" : "DownloadedDate_Desc"), search = @ViewBag.Search, page = @ViewBag.PageNumber })</th>
                                        <th scope="col" class="align-middle"></th>
                                        <th scope="col" class="align-middle"></th>
                                        <th scope="col" class="align-middle"></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Count() == 0)
                                    {
                                        <tr class="no-record">
                                            <td colspan="11" class="text-center align-middle">No Record Found</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        var srno = (ViewBag.PageNumber - 1) * 10;
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                @{ srno = srno + 1; }
                                                <td class="align-middle text-center">@srno</td>
                                                <td class="align-middle getpurple"><a href="@Url.Action("Notes", "SearchNotes", new { id = @item.TblDownload.NoteID })">@item.TblDownload.NoteTitle</a></td>
                                                <td class="align-middle">@item.TblDownload.NoteCategory</td>
                                                <td class="align-middle">@item.TblUser.EmailID</td>
                                                <td class="align-middle">@item.TblUserProfile.Phone_number_Country_Code @item.TblUserProfile.Phone_number</td>
                                                @if (@item.TblDownload.IsPaid == true)
                                                {
                                                    <td class="align-middle">Paid</td>
                                                    <td class="align-middle">$@item.TblDownload.PurchasedPrice</td>
                                                }
                                                else
                                                {
                                                    <td class="align-middle">Free</td>
                                                    <td class="align-middle">$0</td>
                                                }
                                                <td class="align-middle">@item.TblDownload.CreatedDate.Value.ToString("dd MMM yyyy hh:mm:ss")</td>
                                                <td class="align-middle">
                                                    <a type="button" href="@Url.Action("Notes", "SearchNotes", new { id = @item.TblDownload.NoteID } )"><img src="~/Img/Front/Dashboard/eye.png" alt="view" class="eye"></a>
                                                </td>
                                                <td class="align-middle">
                                                    <!-- Default dropleft button -->
                                                    <div class="dropdown">
                                                        <!--     <button type="button" id="dropdownMenuLink" class="btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">-->
                                                        <a type="submit" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            <i class="fa fa-ellipsis-v  dowhite"></i>
                                                        </a>
                                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                                            <a href="@Url.Action("AllowDownload", new { id = @item.TblDownload.ID })" class="dropdown-item" type="button">Allow Download</a>
                                                        </div>

                                                    </div>
                                                </td>
                                                <td></td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Pagination
    <nav aria-label="Page navigation example">
        <div class="container">
            <div class="row justify-content-center">

                <ul class="pagination mypagination top-page">
                    <li class="page-item">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true"><i class="fa fa-angle-left "></i></a>
                    </li>
                    <li class="page-item selected"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true"><i class="fa fa-angle-right"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Pagination Ends -->
        -->
        @if (Model.Count() != 0)
        {
            <div class="row justify-content-center">

                <nav aria-label="...">
                    <ul class="pagination flex-wrap">

                        <li class="page-item">
                            @if (ViewBag.PageNumber == 1)
                            {
                                <a class="page-link" href="@Url.Action("BuyerRequest",  new { sort = @ViewBag.Sort, search = @ViewBag.Search, page = @ViewBag.PageNumber })"><i class="fa fa-angle-left"></i></a>
                            }
                            else
                            {
                                <a class="page-link" href="@Url.Action("BuyerRequest", new { sort = @ViewBag.Sort, search = @ViewBag.Search, page = @ViewBag.PageNumber - 1 })"><i class="fa fa-angle-left"></i></a>
                            }
                        </li>

                        @{
                            double? TotalPages = ViewBag.TotalPages;

                            if (ViewBag.PageNumber != 1 && ViewBag.PageNumber - 2 > 1)
                            {
                                int page = Convert.ToInt32(@ViewBag.PageNumber) - 3;
                                <li class="page-item">@Html.ActionLink("1", "BuyerRequest", new { sort = @ViewBag.Sort, search = @ViewBag.Search, page = 1 }, new { @class = "page-link" })</li>
                                if (page != 1)
                                {
                                    <li class="page-item more-pages-dots">@Html.ActionLink("...", "BuyerRequest", new { sort = @ViewBag.Sort, search = @ViewBag.Search, page = page }, new { @class = "page-link more-pages-dots" })</li>
                                }
                            }

                            for (int i = 2; i > 0; i--)
                            {
                                if (ViewBag.PageNumber - i > 0)
                                {
                                    int page = Convert.ToInt32(@ViewBag.PageNumber) - i;
                                    <li class="page-item">@Html.ActionLink(page.ToString(), "BuyerRequest", new { sort = @ViewBag.Sort, search = @ViewBag.Search, page = page }, new { @class = "page-link" })</li>
                                }
                            }

                            <li class="page-item active">
                                <a class="page-link">@ViewBag.PageNumber<span class="sr-only">(current)</span></a>
                            </li>

                            for (int i = 1; i < 3; i++)
                            {
                                if (ViewBag.PageNumber + i <= TotalPages)
                                {
                                    int page = Convert.ToInt32(@ViewBag.PageNumber) + i;
                                    <li class="page-item">@Html.ActionLink(page.ToString(), "BuyerRequest", new { sort = @ViewBag.Sort, search = @ViewBag.Search, page = page }, new { @class = "page-link" })</li>
                                }
                            }

                            if (ViewBag.PageNumber != TotalPages && ViewBag.PageNumber + 2 < TotalPages)
                            {
                                int page = Convert.ToInt32(@ViewBag.PageNumber) + 3;
                                if (page != TotalPages)
                                {
                                    <li class="page-item">@Html.ActionLink("...", "BuyerRequest", new { sort = @ViewBag.Sort, search = @ViewBag.Search, page = page }, new { @class = "page-link more-pages-dots" })</li>
                                }
                                <li class="page-item">@Html.ActionLink(TotalPages.ToString(), "BuyerRequest", new { sort = @ViewBag.Sort, search = @ViewBag.Search, page = TotalPages }, new { @class = "page-link" })</li>
                            }

                        }

                        <li class="page-item">
                            @if (ViewBag.PageNumber == TotalPages)
                            {
                                <a class="page-link" href="@Url.Action("BuyerRequest", new { sort = @ViewBag.Sort, search = @ViewBag.Search, page = @ViewBag.PageNumber })"><i class="fa fa-angle-right"></i></a>
                            }
                            else
                            {
                                <a class="page-link" href="@Url.Action("BuyerRequest", new { sort = @ViewBag.Sort, search = @ViewBag.Search, page = @ViewBag.PageNumber + 1 })"><i class="fa fa-angle-right"></i></a>
                            }
                        </li>

                    </ul>
                </nav>

            </div>
        }
        <!--Buyer Requests Table Ends -->
