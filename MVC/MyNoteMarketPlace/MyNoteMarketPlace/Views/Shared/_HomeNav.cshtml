
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0 ,user-scalable=no">
    <!-- Title -->
    <title>Notes Marketplace</title>
    <!-- Google Link For Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans
             :wght@300;400;600;700&display=swap" rel="stylesheet">
    <!-- Fontawesome(For icons)-->
    <link rel="stylesheet" href="~/Content/Front/css/font-awesome/css/font-awesome.min.css">
    <!--bootstrap.css file-->
    <link rel="stylesheet" href="~/Content/Front/css/bootstrap/bootstrap.min.css">
    <!-- Custom Css file-->
    <link rel="stylesheet" href="~/Content/Front/css/style.css">
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/Front/css/responsive.css">
    <style>
        .altbar {
            height: 100px !important;
            padding-top: 25px;
            padding-left: 9%;
            padding-right: 10%;
            /*for smoothing nav-bar while scrolling*/
            -webkit-transition: all 300ms linear;
            transition: all 300ms linear;
        }

        ul.navbar-nav > li > a {
            font-family: "Open Sans", sans-serif;
            color: #fff;
            font-size: 16px;
            font-weight: 600;
        }


        .white-nav-top-1 {
            background: #fff;
            -webkit-box-shadow: 0 8px 6px -9px #999;
            box-shadow: 0 8px 6px -9px #999;
            z-index: 2;
            /* background: #fff;
        padding: 10px 0;
        -webkit-background-shadow: 0 8px 6px -9px #999;
        background-shadow: 0 8px 6px -9px #999;
        z-index: 2;*/
        }

            .white-nav-top-1 ul.navbar-nav > li > a {
                font-family: "Open Sans", sans-serif;
                color: #333333;
                font-size: 16px;
                font-weight: 600;
            }

                .white-nav-top-1 ul.navbar-nav > li > a.brdr:hover,
                .white-nav-top-1 ul.navbar-nav > li > a.brdr:focus {
                    border-bottom: 3px solid #6255a5;
                    color: #6255a5;
                }

                .white-nav-top-1 ul.navbar-nav > li > a:hover,
                .white-nav-top-1 ul.navbar-nav > li > a:focus {
                    background: none;
                }

            /* Active list element get highlighted with yellow color  */
            .white-nav-top-1 ul.navbar-nav > li.active > a {
                /* color: #f4c613;
        font-weight: 500; */
                color: #000;
            }

            .white-nav-top-1 #mynavbtn {
                background-color: #6255a5;
                color: #fff;
            }

        #mynavbtn {
            background-color: #fff;
            color: #6255a5;
            width: 80px;
        }

        .white-nav-top-1 #mynavbtn {
            background-color: #6255a5;
            color: #fff;
        }

        /*For Footer*/
        footer ul.social-list {
            padding-right: 8% !important;
        }
        /*To Bring Top Image*/
        #top-img {
            height: 620px;
            width: 100%;
            position: relative;
            background-image: url("/Img/Front/home/banner-with-overlay.jpg");
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
        }
    </style>
</head>

<body data-target=".navbar">
    <!-- Header -->
    <header class="home-header">
        @{
            var context = new Datebase1Entities();
        }
        <nav class="navbar-fixed-top altbar">
            <div class="container-fluid">
                <div class="site-nav-wrapper">
                    <!--For LOGO -->
                    <div class="navbar-header">
                        <!--Mobile Menu Open Button -->
                        <span id="mobile-nav-open-btn" class="open-btn">&#9776;</span>
                        <a href="#home" class="navbar-brand-1 smooth-scroll"><img src="~/Img/Front/pre-login/top-logo.png" alt="logo" onclick="location.href='@Url.Action("Index", "Home")'"></a>
                    </div>
                    <!--Main Menu -->
                    <div class="cointer">
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav  pull-right">

                                <li><a class="smooth-scroll brdr" onclick="location.href='@Url.Action("Search","SearchNotes")'">Search Notes</a></li>
                                <li><a class="smooth-scroll brdr" onclick="location.href='@Url.Action("Dashboard","SellYourNotes")'">Sell Your Notes</a></li>


                                <li><a class="smooth-scroll brdr" onclick="location.href='@Url.Action("FAQ","FAQ")'">FAQ</a></li>

                                <li><a class="smooth-scroll brdr" onclick="location.href='@Url.Action("ContactUs","ContactUs")'">Contact Us</a></li>

                                <li>
                                    <a class="smooth-scroll" href="#">
                                        <button type="submit" class="btn text-center" id="mynavbtn" onclick="location.href='@Url.Action("Login", "SignUp")'">Login</button>
                                    </a>
                                </li>


                            </ul>
                        </div>
                    </div>
                    <!--Mobile Menu-->
                    <div id="mobile-nav">
                        <!--Mobile Menu Close Button -->
                        <span id="mobile-nav-close-btn">&times;</span>
                        <div id="mobile-nav-content">
                            <ul class="nav">

                                <li><a class="smooth-scroll brdr" onclick="location.href='@Url.Action("Search","SearchNotes")'">Search Notes</a></li>
                                <li><a class="smooth-scroll brdr" onclick="location.href='@Url.Action("Dashboard","SellYourNotes")'">Sell Your Notes</a></li>

                                <li><a class="smooth-scroll brdr" onclick="location.href='@Url.Action("FAQ","FAQ")'">FAQ</a></li>
                                <li><a class="smooth-scroll brdr" onclick="location.href='@Url.Action("ContactUs","ContactUs")'">Contact Us</a></li>
                                <li>
                                    <a class="smooth-scroll" href="#">
                                        <button type="submit" class="btn text-center" id="mynavbtn" style="background-color: #6255a5; color: #fff;" onclick="location.href='@Url.Action("Login", "SignUp")'">Login</button>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <!-- Header Ends -->
    @RenderBody()


    <!-- Footer -->
    <footer>
        <div class="end home-footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-12 col-sm-6 col-xs-8">
                        <p style="margin-left: 15%;">
                            Copyright &copy;Tatvasoft All Rights Reserved.
                        </p>
                    </div>
                    @{
                        var facebook = context.SystemConfigurations.Where(x => x.Key.ToLower() == "facebookurl").Select(x => x.Value).FirstOrDefault();
                        var twitter = context.SystemConfigurations.Where(x => x.Key.ToLower() == "twitterurl").Select(x => x.Value).FirstOrDefault();
                        var linkedin = context.SystemConfigurations.Where(x => x.Key.ToLower() == "linkedinurl").Select(x => x.Value).FirstOrDefault();
                    }

                    <div class="col-md-6 col-12 col-sm-6 col-xs-4 text-right">
                        <ul class="social-list notes-footer">
                            <li><a href="@facebook" target="_blank"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="@twitter" target="_blank"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="@linkedin" target="_blank"><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Ends -->
    <!--jquery-->
    <script src="~/Script/Front/js/jquery.min.js"></script>
    <!-- Proper JS -->
    <script src="~/Script/Front/js/popper.min.js"></script>
    <!--bootstrap.js file-->
    <script src="~/Script/Front/js/bootstrap/bootstrap.min.js"></script>
    <!-- custom js file-->
    <script src="~/Script/Front/js/script.js"></script>
    <script>
        // show & hide white navigation
        $(function () {

            //on page load
            showHideNav();

            $(window).scroll(function () {

                //on window scroll
                showHideNav();

            });

            function showHideNav() {
                if ($(window).scrollTop() > 50) {
                    // Show white nav
                    $("nav").addClass("white-nav-top-1");
                    //Show dark logo
                    $(".navbar-brand-1 img").attr("src", "/Img/Front/pre-login/logo.png");
                    // Show back to top button
                    $("#back-to-top").fadeIn();
                    $(".open-btn").css("color", "#6255a5");
                } else {
                    //Hide white nav
                    $("nav").removeClass("white-nav-top-1");
                    //Show Normal Logo
                    $(".navbar-brand-1 img").attr("src", "/Img/Front/pre-login/top-logo.png");
                    // Hide back to top button
                    $("#back-to-top").fadeOut();
                    $(".open-btn").css("color", "#fff");
                }
            }
        });


        //Smooth Scrolling
        $(function () {
            $("a.smooth-scroll").click(function (event) {
                //prevent default action
                event.preventDefault();
                // get section id like #about, #team, #work etc.
                var section_id = $(this).attr("href");

                $("html, body").animate({
                    scrollTop: $(section_id).offset().top - 64
                }, 1250 /*animation duration*/, "easeInOutExpo" /*Easing plugin*/);

            });
        });

    </script>


    <script src="~/Script/jquery.validate.min.js"></script>
    <script src="~/Script/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>
