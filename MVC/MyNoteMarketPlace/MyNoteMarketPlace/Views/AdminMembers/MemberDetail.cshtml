@using PagedList;
@using PagedList.Mvc;

@model  MyNoteMarketPlace.Models.MemberDetailModel
@{
    ViewBag.Title = "Member Details";
    Layout = "~/Views/Shared/_AdminNav.cshtml";
}
@{ 
    <style>

          .pagination {
            margin-left: 40% !important;
             margin-top: 10px;
           
        }
    </style>
}

<!-- Detail Upper -->
<section id="notesdetail-detail">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-12 col-sm-12">
                <div class="head">
                    <h3>Member Details</h3>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-7 col-xl-7">
                        <div class="row docenter">
                            <div class=" col-xs-12 col-sm-5 col-md-5 col-lg-3">
                                <!--  <img class="img-fluid" src="img/images/member.png"> -->
                                @if (Model.ProfilePicture != null)
                                {
                                    <img src="@Url.Content(Model.ProfilePicture)" class="img-fluid">
                                }
                                else
                                {
                                    <img src="~/DefaultImage/profile.png" class="img-fluid">
                                }
                            </div>
                            <div class="col-xs-12 col-sm-7 col-md-7 col-lg-9">
                                <div class="row">
                                    <div class="col-xs-5 col-sm-5 col-md-5 col-lg-4 left-side-note">
                                        <h5>First Name:</h5>
                                        <h5>Last Name:</h5>
                                        <h5>Email:</h5>
                                        <h5>DOB:</h5>
                                        <h5>Phone No.:</h5>
                                        <h5>College/<br>University:</h5>


                                    </div>
                                    <div class="col-xs-7 col-sm-7 col-md-5 col-lg-8 right-side-note">
                                        <h5>@Model.FirstName</h5>
                                        <h5>@Model.LastName</h5>
                                        <h5>@Model.Email</h5>

                                        @if (Model.DOB != null)
                                        {
                                            <h5>@Model.DOB.Value.ToString("dd-MM-yyyy")</h5>
                                        }
                                        else
                                        {
                                            <h5></h5>
                                        }
                                        <h5>@Model.PhoneNumberCountryCode @Model.PhoneNumber</h5>
                                        <h5><br>@Model.College</h5>

                                    </div>

                                </div>


                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-5 col-xl-5 margin-top">
                        <div class="row">
                            <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5 left-side-note">
                                <h5>Address 1:</h5>
                                <h5>Address 2:</h5>
                                <h5>City:</h5>
                                <h5>State:</h5>
                                <h5>Country:</h5>
                                <h5>Zipcode:</h5>
                            </div>
                            <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7 right-side-note">
                                <h5>@Model.Address1</h5>
                                <h5>@Model.Address2</h5>
                                <h5>@Model.City</h5>
                                <h5>@Model.State</h5>
                                <h5>@Model.Country</h5>
                                <h5>@Model.ZipCode</h5>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<!-- Detail Upper Ends-->

<div class="content-box-md">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <hr>
            </div>
        </div>
    </div>
</div>



<!-- Notes -->
<div class="outerbox">
    <section id="dashboard-publish" class="member-margin">
        <div class="container">
            <div class="row top-table">
                <div class="col-12 col-sm-12 col-md-12 col-lg-6">
                    <h3>Notes</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="grid-table table-responsive-xl" style="overflow-x:auto;">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col" class="align-middle text-center">SR NO.</th>
                                    <th scope="col" class="align-middle"> @Html.ActionLink("NOTE TITLE", "MemberDetail", new { member = ViewBag.Member, sort = ViewBag.Sort == null ? "Title_Desc" : (ViewBag.Sort == "Title_Asc" ? "Title_Desc" : "Title_Asc")})</th>
                                    <th scope="col" class="align-middle"> @Html.ActionLink("CATEGORY", "MemberDetail", new { member = ViewBag.Member, sort = ViewBag.Sort == null ? "Category_Desc" : (ViewBag.Sort == "Category_Asc" ? "Category_Desc" : "Category_Asc") })</th>
                                    <th scope="col" class="align-middle">@Html.ActionLink("STATUS", "MemberDetail", new { member = ViewBag.Member, sort = ViewBag.Sort == null ? "Status_Desc" : (ViewBag.Sort == "Status_Asc" ? "Status_Desc" : "Status_Asc") })</th>
                                    <th scope="col" class="align-middle">@Html.ActionLink("DOWNLOADED NOTES", "MemberDetail", new { member = ViewBag.Member, sort = ViewBag.Sort == null ? "DownloadedNotes_Desc" : (ViewBag.Sort == "DownloadedNotes_Asc" ? "DownloadedNotes_Desc" : "DownloadedNotes_Asc") })</th>
                                    <th scope="col" class="align-middle">@Html.ActionLink("TOTAL EARNING ", "MemberDetail", new { member = ViewBag.Member, sort = ViewBag.Sort == null ? "TotalEarning_Desc" : (ViewBag.Sort == "TotalEarning_Asc" ? "TotalEarning_Desc" : "TotalEarning_Asc") })</th>
                                    <th scope="col" class="align-middle"> @Html.ActionLink("DATE ADDED", "MemberDetail", new { member = ViewBag.Member, sort = ViewBag.Sort == null ? "DateAdded_Desc" : (ViewBag.Sort == "DateAdded_Asc" ? "DateAdded_Desc" : "DateAdded_Asc") })</th>
                                    <th scope="col" class="align-middle"> @Html.ActionLink("PUBLISHED DATE", "MemberDetail", new { member = ViewBag.Member, sort = ViewBag.Sort == null ? "PublishedDate_Desc" : (ViewBag.Sort == "PublishedDate_Asc" ? "PublishedDate_Desc" : "PublishedDate_Asc") })</th>


                                    <th scope="col" class="align-middle"> </th>
                                    <th scope="col" class="align-middle"> </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Notes.Count() == 0)
                                {
                                    <tr>
                                        <td colspan="10" class="align-middle text-center">No Record Found</td>
                                    </tr>
                                }
                                else
                                {

                                    int srno = 0;
                                    if (ViewBag.PageNumber == null)
                                    {
                                        srno = 0;
                                    }
                                    else
                                    {
                                         srno = (ViewBag.PageNumber - 1) * 5;
                                    }
                                    foreach (var item in Model.Notes)
                                    {
                                        { srno = srno + 1; }
                                        <tr>
                                            <td class="align-middle text-center">@srno</td>
                                            <td class="align-middle  getpurple"><a href="@Url.Action("NoteDetail", "Admin", new { noteid = @item.ID })">@item.Title</a></td>
                                            <td class="align-middle">@item.Category</td>
                                            <td class="align-middle">@item.Status</td>
                                            <td class="align-middle getpurple"><a href="@Url.Action("DownloadedNotes", "AdminNotes", new { selectednote = item.ID })">@item.DownloadedNotes</a></td>


                                            @if (item.TotalEarning != null)
                                            {
                                                <td class="align-middle">$@item.TotalEarning</td>
                                            }
                                            else
                                            {
                                                <td class="align-middle">$0</td>
                                            }

                                            <td class="align-middle">@item.DateAdded.Value.ToString("dd-MM-yyyy, hh:mm")</td>

                                            @if (item.PublishedDate != null)
                                            {
                                                <td class="align-middle">@item.PublishedDate.Value.ToString("dd-MM-yyyy, hh:mm")</td>
                                            }
                                            else
                                            {
                                                <td class="align-middle">NA</td>
                                            }

                                            <td class="align-middle">
                                                <div class="dropdown">
                                                    <a type="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <img src="~/Img/Admin/images/dots.png">
                                                    </a>
                                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                                        <a class="dropdown-item" href="@Url.Action("AdminDownloadNote", "Admin", new { noteid = @item.ID })" role="button">Download Notes</a>

                                                    </div>
                                                </div>
                                            </td>
                                            <td></td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>


            </div>
        </div>
    </section>
    <!-- Notes ENds
    <!-- Pagination -->
    <nav>
        <div class="container">
            <div class="row justify-content-center">

         @Html.PagedListPager(Model.Notes, page => Url.Action("MemberDetail", new { page, sort = @ViewBag.Sort }), new PagedList.Mvc.PagedListRenderOptions
         {
             LiElementClasses = new[] { "page-item" },
             UlElementClasses = new[] { "pagination mypagination top-page" },
             LinkToNextPageFormat = ">",
             LinkToPreviousPageFormat = "<",
             DisplayEllipsesWhenNotShowingAllPageNumbers = false,
             DisplayLinkToFirstPage = PagedListDisplayMode.Never,
             DisplayLinkToLastPage = PagedListDisplayMode.Never
         })

            </div>
        </div>
    </nav>
    <!-- Pagination Ends -->
</div>
