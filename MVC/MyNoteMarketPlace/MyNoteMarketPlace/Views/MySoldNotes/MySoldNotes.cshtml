@model IEnumerable<MyNoteMarketPlace.Models.MySoldNotesModel>

@{
    ViewBag.Title = "MySoldNotes";
    Layout = "~/Views/Shared/_UserNav.cshtml";
}

@{
    <style>
        .pagination {
            margin-left: 50% !important;
        }

        #dashboard-progress Input[type=search], #dashboard-publish Input[type=search] {
            width: 322px;
            border: 1px solid #d1d1d1;
            margin-bottom: 20px;
            margin-left: -100px;
        }
    </style>

}

<!-- My Sold Notes Teble -->
<div class="outerbox">
    <section id="dashboard-progress" class="mydownload-margin">
        <div class="container">
            @using (@Html.BeginForm("MySoldNotes", "MySoldNotes", FormMethod.Get))
            {
                <div class="row top-table">
                    <div class=" col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <h3> My Sold Notes</h3>
                    </div>
                    <div class=" col-lg-6 col-md-6 col-sm-6 col-xs-12 dashboard-pa ">
                        <div class="row justify-content-end left-end">
                            <div class="wrapper">
                                <img src="~/Img/Front/Dashboard/search.jpg" class="searchimage doup">
                                <input type="search" class="form-control search-bar InputEmail1" placeholder="Search" name="search" value="@ViewBag.Search">
                            </div>
                            <div class="btn-merge">
                                <button type="submit" class="btn text-uppercase text-center" id="mybt"> <b> Search</b> </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
                <!-- Download Table -->
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="grid-table table-responsive-xl">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col" class="align-middle text-center"> SR NO.</th>
                                        <th scope="col" class="align-middle"> @Html.ActionLink("Notes Title", "MySoldNotes", new { sort = ViewBag.Sort == null ? "Title_Desc" : (ViewBag.Sort == "Title_Asc" ? "Title_Desc" : "Title_Asc"), search = ViewBag.Search, page = ViewBag.Page })</th>
                                        <th scope="col" class="align-middle">@Html.ActionLink("Category", "MySoldNotes", new { sort = ViewBag.Sort == null ? "Category_Desc" : (ViewBag.Sort == "Category_Asc" ? "Category_Desc" : "Category_Asc"), search = ViewBag.Search, page = ViewBag.Page })</th>
                                        <th scope="col" class="align-middle"> @Html.ActionLink("Buyer", "MySoldNotes", new { sort = ViewBag.Sort == null ? "Buyer_Desc" : (ViewBag.Sort == "Buyer_Asc" ? "Buyer_Desc" : "Buyer_Asc"), search = ViewBag.Search, page = ViewBag.Page })</th>
                                        <th scope="col" class="align-middle"> @Html.ActionLink("Sell Type", "MySoldNotes", new { sort = ViewBag.Sort == null ? "Type_Desc" : (ViewBag.Sort == "Type_Asc" ? "Type_Desc" : "Type_Asc"), search = ViewBag.Search, page = ViewBag.Page })</th>
                                        <th scope="col" class="align-middle">@Html.ActionLink("Price", "MySoldNotes", new { sort = ViewBag.Sort == null ? "Price_Desc" : (ViewBag.Sort == "Price_Asc" ? "Price_Desc" : "Price_Asc"), search = ViewBag.Search, page = ViewBag.Page })</th>
                                        <th scope="col" class="align-middle">@Html.ActionLink("Downloaded Date/Time", "MySoldNotes", new { sort = ViewBag.Sort == null ? "DownloadedDate_Asc" : (ViewBag.Sort == "DownloadedDate_Desc" ? "DownloadedDate_Asc" : "DownloadedDate_Desc"), search = ViewBag.Search, page = ViewBag.Page })</th>
                                        <th scope="col" class="align-middle"> </th>
                                        <th scope="col" class="align-middle"> </th>
                                        <th scope="col" class="align-middle"> </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Count() == 0)
                                    {
                                        <tr>
                                            <td colspan="10" class="align-middle text-center">No Record Found</td>
                                        </tr>
                                    }
                                    else
                                    {
                                       var srno = (ViewBag.PageNumber - 1) * 10;
                                       foreach (var item in Model)
                                       {
                                <tr>
                                    @{ srno = srno + 1; }
                                    <td class="align-middle text-center">@srno</td>
                                    <td class="align-middle getpurple"><a href="@Url.Action("Notes", "NotesDetails", new { id = @item.NoteID })">@item.Title</a></td>
                                    <td class="align-middle">@item.Category</td>
                                    <td class="align-middle"> @item.Buyer</td>
                                    <td class="align-middle"> @item.SellType</td>
                                    @if (@item.Price != null)
                                    {
                                        <td class="align-middle">@item.Price</td>
                                    }
                                    else
                                    {
                                        <td class="align-middle">$0</td>
                                    }
                                   
                                    @if (item.NoteDownloaded == true)
                                    {
                                        <td class="align-middle">@item.DownloadedDate.Value.ToString("dd MMM yyyy, hh:mm:ss")</td>
                                    }
                                    else
                                    {
                                        <td class="align-middle"></td>
                                    }

                                    <td class="align-middle">
                                        <a type="button" href="@Url.Action("Notes", "NotesDetails", new { id = @item.NoteID })"> <img src="~/Img/Front/Dashboard/eye.png" alt="view"> </a>
                                    </td>
                                    <td class="align-middle">
                                        <div class="dropdown">
                                            <a type="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fa fa-ellipsis-v  dowhite"> </i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                                <a class="dropdown-item" href="@Url.Action("DownloadNotes", "NotesDetails", new { noteid = @item.NoteID } )"> Download Notes</a>

                                            </div>
                                        </div>
                                    </td>
                                    <td> </td>
                                </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
    </section>
   

    <!-- Pagination-->

    @if (Model.Count() != 0)
    {
        <div class="row justify-content-center">

            <nav aria-label="...">
                <ul class="pagination flex-wrap">

                    <li class="page-item">
                        @if (ViewBag.PageNumber == 1)
                        {
                            <a class="page-link" href="@Url.Action("MySoldNotes", new { sort = ViewBag.Sort, search = @ViewBag.Search, page = @ViewBag.PageNumber })"><i class="fa fa-angle-left"></i></a>
                        }
                        else
                        {
                            <a class="page-link" href="@Url.Action("MySoldNotes", new { sort = ViewBag.Sort, search = @ViewBag.Search, page = @ViewBag.PageNumber - 1 })"><i class="fa fa-angle-left"></i></a>
                        }
                    </li>

                    @{
                        double? TotalPages = ViewBag.TotalPages;

                        if (ViewBag.PageNumber != 1 && ViewBag.PageNumber - 2 > 1)
                        {
                            int page = Convert.ToInt32(@ViewBag.PageNumber) - 3;
                            <li class="page-item">@Html.ActionLink("1", "MySoldNotes", new { sort = @ViewBag.Sort, search = @ViewBag.Search, page = 1 }, new { @class = "page-link" })</li>
                            if (page != 1)
                            {
                                <li class="page-item more-pages-dots">@Html.ActionLink("...", "MySoldNotes", new { sort = @ViewBag.Sort, search = @ViewBag.Search, page = page }, new { @class = "page-link more-pages-dots" })</li>
                            }
                        }

                        for (int i = 2; i > 0; i--)
                        {
                            if (ViewBag.PageNumber - i > 0)
                            {
                                int page = Convert.ToInt32(@ViewBag.PageNumber) - i;
                                <li class="page-item">@Html.ActionLink(page.ToString(), "MySoldNotes", new { sort = @ViewBag.Sort, search = @ViewBag.Search, page = page }, new { @class = "page-link" })</li>
                            }
                        }

                        <li class="page-item active">
                            <a class="page-link">@ViewBag.PageNumber<span class="sr-only">(current)</span></a>
                        </li>

                        for (int i = 1; i < 3; i++)
                        {
                            if (ViewBag.PageNumber + i <= TotalPages)
                            {
                                int page = Convert.ToInt32(@ViewBag.PageNumber) + i;
                                <li class="page-item">@Html.ActionLink(page.ToString(), "MySoldNotes", new { sort = @ViewBag.Sort, search = @ViewBag.Search, page = page }, new { @class = "page-link" })</li>
                            }
                        }

                        if (ViewBag.PageNumber != TotalPages && ViewBag.PageNumber + 2 < TotalPages)
                        {
                            int page = Convert.ToInt32(@ViewBag.PageNumber) + 3;
                            if (page != TotalPages)
                            {
                                <li class="page-item">@Html.ActionLink("...", "MySoldNotes", new { sort = @ViewBag.Sort, search = @ViewBag.Search, page = page }, new { @class = "page-link more-pages-dots" })</li>
                            }
                            <li class="page-item">@Html.ActionLink(TotalPages.ToString(), "MySoldNotes", new { sort = @ViewBag.Sort, search = @ViewBag.Search, page = TotalPages }, new { @class = "page-link" })</li>
                        }

                    }

                    <li class="page-item">
                        @if (ViewBag.PageNumber == ViewBag.TotalPages)
                        {
                            <a class="page-link" href="@Url.Action("MySoldNotes", new { sort = ViewBag.Sort, search = @ViewBag.Search, page = @ViewBag.PageNumber })"><i class="fa fa-angle-right"></i></a>
                        }
                        else
                        {
                            <a class="page-link" href="@Url.Action("MySoldNotes", new { sort = ViewBag.Sort, search = @ViewBag.Search, page = @ViewBag.PageNumber + 1 })"><i class="fa fa-angle-right"></i></a>
                        }
                    </li>

                </ul>
            </nav>

        </div>
    }
    <!-- Pagination Ends -->


</div>
<!-- My Sold Notes Table Ends -->
